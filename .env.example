# Example environment variables for the URL Shortener project
# Copy to `.env` and fill with your own values. Do NOT commit secrets.

# App
PORT=3000
NODE_ENV=development
BASE_URL=http://localhost:3000

# PostgreSQL (one of these formats is used by the project)
# Option A: single DATABASE_URL
# DATABASE_URL=postgresql://user:password@localhost:5432/urlshortner

# Option B: individual PG_* variables (preferred for Docker-compose)
PGHOST=localhost
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=urlshortner
PGPORT=5432

# Redis (used for caching and BullMQ queue)
REDIS_URL=redis://127.0.0.1:6379
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=

# Optional test/dev toggles
# Set to true in CI/test to avoid connecting to a local Redis instance
DISABLE_REDIS=false

# Secrets
JWT_SECRET=replace_with_a_long_random_secret
BCRYPT_SALT_ROUNDS=10

# Other
# Set to 'true' in CI if you don't want to start the worker queue during tests
# DISABLE_QUEUE=false

# Notes:
# - Keep secrets (JWT_SECRET, DB password, REDIS_PASSWORD) out of version control.
# - For CI, set NODE_ENV=test and DISABLE_REDIS=true to prevent attempts to connect to Redis/BullMQ.# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/urlshortener

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-64-chars-minimum
JWT_EXPIRE=7d

# Application Configuration
BASE_URL=http://localhost:3000
SHORT_CODE_LENGTH=6

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Optional: GeoIP Service (for analytics)
# Sign up at ipapi.co or similar service
GEOIP_API_KEY=